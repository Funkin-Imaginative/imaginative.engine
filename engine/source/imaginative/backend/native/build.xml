<xml>
    <pragma once="true" />
    <set name="PROJECT_DIR" value="${this_dir}" />

    <files id='haxe'>
        <compilervalue name="-I" value="${PROJECT_DIR}/src/" />
    </files>

    <files id='__main__'>
        <compilervalue name="-I" value="${PROJECT_DIR}/src/" />
    </files>

    <files id='refreshrate'>
        <compilervalue name="-I" value="${PROJECT_DIR}/include/" />
        <file name="${PROJECT_DIR}/src/refreshrate.cpp" if="linux" />
    </files>

    <target id="haxe">
        <files id="refreshrate" />
        <section if="linux">
            <lib name="-lX11" />
            <lib name="-lXrandr" />
        </section>
    </target>
</xml>