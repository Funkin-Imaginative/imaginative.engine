<xml>
    <pragma once="true" />
    <set name="PROJECT_DIR" value="${this_dir}" />

    <files id='haxe'>
        <compilervalue name="-I" value="${PROJECT_DIR}/" />
    </files>

    <files id='__main__'>
        <compilervalue name="-I" value="${PROJECT_DIR}/" />
    </files>

    <files id='native'>
        <compilervalue name="-I" value="${PROJECT_DIR}/include/" />
        <file name="${PROJECT_DIR}/native.cpp" if="linux" />
    </files>

    <target id="haxe">
        <files id="native" />
        <section if="linux">
            <lib name="-lX11" />
            <lib name="-lXrandr" />
        </section>
		<section if="windows">
            <lib name="dwmapi.lib" if="windows"/>
            <lib name="gdi32.lib" if="windows"/>
        </section>
    </target>
</xml>