{
	"cSpell.words": [
		"FLXGRAPHIC",
		"HAXEPATH",
		"HORI",
		"hxdiscord",
		"hxhardware",
		"hxjsonast",
		"hxwindowmode",
		"Infront",
		"jcustomparse",
		"jcustomwrite",
		"jignored",
		"LOCKON",
		"luajit",
		"neko",
		"PAGEUP",
		"preprocesor",
		"SDCB",
		"tweens"
	],

	"editor.codeActionsOnSave": {
		"source.organizeImports": "always",
		"source.sortImports": "always"
	},
	"editor.insertSpaces": false,

	"files.associations": {
		"*.hxp": "haxe",
		"*.json": "jsonc"
	},
	"files.autoGuessEncoding": true,
	"files.enableTrash": true, // YOU'LL THANK ME LATER!!!
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	"haxe.enableExtendedIndentation": true,
	"haxe.importsSortOrder": "stdlib -> libs -> project",
	"haxe.inlayHints": {
		"conditionals": true,
		"parameterTypes": true
	},

	"haxecheckstyle.sourceFolders": ["engine/source"],

	"xml.format.emptyElements": "collapse",
	"xml.format.enforceQuoteStyle": "preferred",
	"xml.format.joinCDATALines": true,
	"xml.format.joinCommentLines": true,
	"xml.format.joinContentLines": true,
	"xml.format.splitAttributesIndentSize": 4,
	"xml.preferences.quoteStyle": "single"
}