{
	"tasks": [
		{
			"command": "haxe -cp commandline -D analyzer-optimize --run Main setup",
			"label": "Check Libraries",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "haxe -cp commandline -D analyzer-optimize --run Main setup --global",
			"label": "Check Libraries (Global)",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "haxe -cp commandline -D analyzer-optimize --run Main setup --detect-global",
			"label": "Check Libraries (Detect Globality)",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "lime test cpp -debug --haxelib=hxcpp-debug-server --connect 6000",
			"group": {
				"isDefault": true,
				"kind": "build"
			},
			"label": "Run Debug",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "lime test cpp -final",
			"label": "Run Test",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "lime test cpp",
			"label": "Run Release",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "lime build cpp -debug --haxelib=hxcpp-debug-server --connect 6000",
			"label": "Compile Debug",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "lime build cpp -final",
			"label": "Compile Test",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		},
		{
			"command": "lime build cpp",
			"label": "Compile Release",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"type": "shell"
		}
	],
	"version": "2.0.0"
}