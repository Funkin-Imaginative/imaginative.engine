<?xml version='1.0' encoding='utf-8'?>
<project>
	<app
		title="Friday Night Funkin': Imaginative Engine" main='backend.system.Main'
		packageName='funkin.imaginative.com' package='funkin.imaginative.com'
		file='Imaginative' version='0.0.0' company='rodney528'
		preloader='backend.system.Preloader'
	/>

	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2-->
	<set name='SWF_VERSION' value='11.8'/>

	<!-- Window Settings -->
		<window orientation='landscape' width='1280' height='720' background='#000000' hardware='true' vsync='false' fullscreen='false' resizable='true'/>
		<!-- <window if='desktop'/> -->
		<window if='mac' allow-high-dpi='true'/>
		<window if='mobile' fullscreen='true' resizable='false'/>
	<!-- Window Settings -->

	<!-- Define Setup -->
		<define name='CONTAIN_VERSION_ID'/>
		<define name='CHECK_FOR_UPDATES' if='release CONTAIN_VERSION_ID' unless='debug'/>
		<define name='MOD_SUPPORT'/>
		<define name='SCRIPT_SUPPORT'/>

		<!-- script related -->
		<section if='SCRIPT_SUPPORT'>
			<define name='COMPILE_ALL_CLASSES' if='release'/> <!-- you can remove the "release" check here if you feel its needed -->
			<define name='CUSTOM_CLASSES'/>
			<define name='SOFTCODED_STATES'/>
			<!-- <define name='THROW_LUA_MAKEFUN'/> -->
		</section>
		<section if='cpp'>
			<define name='DISCORD_RICH_PRESENCE' if='desktop'/>
			<define name='ALLOW_VIDEOS' if='desktop || android'/>
		</section>
	<!-- Define Setup -->

	<!-- Path Settings -->
		<!-- Export Directories -->
		<set name='BUILD_DIR' value='export/release' if='release' unless='debug'/>
		<set name='BUILD_DIR' value='export/build' unless='debug'/>
		<set name='BUILD_DIR' value='export/debug' if='debug'/>
		<!-- 32bit -->
		<set name='BUILD_DIR' value='export/release-32bit' if='release 32bit' unless='debug'/>
		<set name='BUILD_DIR' value='export/build-32bit' if='32bit' unless='debug'/>
		<set name='BUILD_DIR' value='export/debug-32bit' if='debug 32bit'/>

		<set name='assetsPath' value='solo/funkin' if='MOD_SUPPORT'/>
		<set name='assetsPath' value='assets'  unless='MOD_SUPPORT'/>

		<!-- Pathing -->
		<source name='source'/>
		<assets path='engine/assets' rename='${assetsPath}' embed='false' preload='true' exclude='*readme.md'/>
		<assets  path='embed/assets' rename='${assetsPath}' embed='true'  preload='true' exclude='*readme.md'/>
		<assets path='engine/root'   rename=''              embed='false' preload='true' exclude='*readme.md'/>
		<assets  path='embed/root'   rename=''              embed='true'  preload='true' exclude='*readme.md'/>

		<!-- Modding -->
		<section if='MOD_SUPPORT'>
			<assets path='engine/modding/upfront'  rename='solo' embed='false' preload='false' exclude='*readme.md'/>
			<assets path='engine/modding/lowerend' rename='mods' embed='false' preload='false' exclude='*readme.md'/>
			<assets  path='embed/modding/upfront'  rename='solo' embed='true'  preload='true'  exclude='*readme.md'/>
			<assets  path='embed/modding/lowerend' rename='mods' embed='true'  preload='true'  exclude='*readme.md'/>
		</section>
		<!-- Path Settings -->

	<!-- Libraries -->
		<!-- <haxelib name='openfl' version='9.2.2'/>
		<haxelib name='lime'   version='8.1.3'/> -->

		<haxelib name='flixel'        version='git'/>
		<haxelib name='flixel-addons' version='git'/>

		<haxelib name='hscript-improved' if='SCRIPT_SUPPORT'/>
		<haxelib name='hxdiscord_rpc'    if='DISCORD_RICH_PRESENCE'/>
		<haxelib name='hxvlc'            if='ALLOW_VIDEOS'/>
		<haxelib name='thx.semver'       if='CONTAIN_VERSION_ID'/>

		<haxelib name='json2object'/>
		<!-- <haxelib name='extension-androidtools' if='android'/> -->

		<haxelib name='hxWindowColorMode' optional='true'/>
	<!-- Libraries -->

	<!-- Debug Things -->
		<haxelib name='hxcpp-debug-server' if='desktop debug'/>
		<haxedef name='FLX_NO_DEBUG'           unless='debug'/>
	<!-- Debug Things -->

	<!-- might make one -->
	<haxedef name='FLX_NO_FOCUS_LOST_SCREEN'/>

	<haxeflag name='-dce' value='no' if='COMPILE_ALL_CLASSES'/>

	<!-- This is even actually being used?? @rodney528 -->
	<haxedef name='NAPE_RELEASE_BUILD' unless='debug'/>

	<!-- Extra Stuff -->
		<!-- May remove? -->
		<haxedef name='no-deprecation-warnings'/>
		<define  name='disable-version-check'/>
		<haxedef name='disable-version-check'/>

		<!-- related to flixel cne libs (I think) -->
		<haxedef name='EXPERIMENTAL_FLXGRAPHIC_DESTROY_FIX'/>
	<!-- Extra Stuff -->

	<!--Place custom nodes like icons here (higher priority to override the HaxeFlixel icon)-->
	<!--
	<icon path='art/icon16.png' size='16'/>
	<icon path='art/icon32.png' size='32'/>
	<icon path='art/icon64.png' size='64'/>
	<icon path='art/iconOG.png'/>
	-->
</project>